<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.misha.mor.letsteamapp.letsteamapp.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/txtHeaderRegister"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email :"
        android:id="@+id/txtEmail"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/etxtEmail"
        android:layout_alignBottom="@+id/etxtEmail"
        android:layout_toStartOf="@+id/etxtEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/etxtUserName"
        android:ems="10"
        android:background="@color/PanelBackground"
        android:layout_alignBaseline="@+id/txtUsername"
        android:layout_alignBottom="@+id/txtUsername"
        android:layout_toEndOf="@+id/txtUsername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@color/PanelBackground"
        android:id="@+id/etxtPassword"
        android:layout_below="@+id/etxtUserName"
        android:layout_alignStart="@+id/etxtUserName"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password :"
        android:id="@+id/txtPass"
        android:layout_alignBaseline="@+id/etxtPassword"
        android:layout_alignBottom="@+id/etxtPassword"
        android:layout_toStartOf="@+id/etxtPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@color/PanelBackground"
        android:id="@+id/etxtEmail"
        android:layout_below="@+id/etxtPassword"
        android:layout_alignStart="@+id/etxtPassword"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And start right now!"
        android:id="@+id/txtHeaderSecond"
        android:singleLine="true"
        android:textSize="@dimen/abc_text_size_title_material"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtHeaderRegister"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username :"
        android:id="@+id/txtUsername"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/txtHeaderSecond"
        android:layout_toStartOf="@+id/txtHeaderRegister" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:id="@+id/btnImage"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:theme="@style/MyButton"
        android:background="@drawable/default_man"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/etxtEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign me UP"
        android:id="@+id/btnSignUp"
        android:onClick="initViews"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:theme="@style/MyButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>