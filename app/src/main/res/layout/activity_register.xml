<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.misha.mor.letsteamapp.letsteamapp.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/txtHeaderRegister"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And start right now!"
        android:id="@+id/txtHeaderSecond"
        android:layout_below="@+id/txtHeaderRegister"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textSize="@dimen/abc_text_size_title_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username :"
        android:id="@+id/txtUsername"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/txtHeaderSecond"
        android:layout_toStartOf="@+id/txtHeaderRegister" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password :"
        android:id="@+id/txtPass"
        android:layout_below="@+id/etxtUsername"
        android:layout_alignEnd="@+id/txtUsername"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtUsername"
        android:ems="10"
        android:layout_below="@+id/txtUsername"
        android:layout_alignStart="@+id/txtPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etxtPassword"
        android:layout_below="@+id/txtPass"
        android:layout_alignStart="@+id/etxtUsername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign me UP"
        android:id="@+id/btnSignUp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:onClick="btnSignUpClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email :"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/etxtPassword"
        android:layout_alignStart="@+id/txtUsername"
        android:layout_marginTop="20dp"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etxtEmail"
        android:layout_below="@+id/txtEmail"
        android:layout_alignStart="@+id/etxtPassword" />
</RelativeLayout>