    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <!-- BUTTON INSERTED HERE -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Events"
            android:id="@+id/btnMyEvents"
            android:layout_weight="1"
            android:theme="@style/MyButton"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnListed"
            android:text="Listed"
            android:theme="@style/MyButton"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnAllEvents"
            android:text="All Events"
            android:theme="@style/MyButton"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <ListView
        android:id="@+id/event_List"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.95"
        android:divider="@null"
        android:stackFromBottom="false"
        android:transcriptMode="alwaysScroll"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentBottom="true">
    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@android:drawable/ic_menu_agenda"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/progressBar2"
        android:layout_marginStart="15dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignTop="@+id/fabSwitch"
        android:layout_toEndOf="@+id/fabSwitch" />

