<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/ic_launcher"
    tools:context="com.misha.mor.letsteamapp.letsteamapp.EventContext"
    android:layout_alignBaseline="@+id/txtEventName">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_height="420dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Event"
        android:id="@+id/txtEventName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textSize="@dimen/abc_text_size_display_1_material" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/etxtCreatorName"
        android:layout_alignTop="@+id/txtEventDisplayName"
        android:layout_alignStart="@+id/txtEventName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtLocation"
        android:layout_alignTop="@+id/txtLocation"
        android:layout_alignStart="@+id/etxtCreatorName"
        android:layout_alignEnd="@+id/etxtCreatorName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Event Creator:"
            android:id="@+id/txtEventDisplayName"
            android:singleLine="true"
            android:layout_below="@+id/etxtContext"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Event Location: "
            android:id="@+id/txtLocation"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/txtEventDisplayName"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etxtContext"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/txtEventName"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@id/linearLayout"
        android:background="@color/NavigationBarPrimer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/btnOpenChat"
            android:background="@drawable/qa" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:id="@+id/btnShowEventLocation"
            android:background="@mipmap/ic_launcher" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"/>


        <ImageButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:id="@+id/btnListIn"
            android:background="@drawable/like" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


    </LinearLayout>

</RelativeLayout>
